<?xml version="1.0" encoding="utf-8"?>
<net.kourlas.voipms_sms.ui.ConversationsListViewItem xmlns:android="http://schemas.android.com/apk/res/android"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:orientation="horizontal"
                                                     android:padding="16dp">

    <ViewSwitcher
            android:id="@+id/view_switcher"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical">

        <QuickContactBadge
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        <ImageView
                android:id="@+id/conversations_photo_checked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary"
                android:contentDescription="@string/conversations_list_view_item_checked"
                android:scaleType="center"
                android:src="@drawable/ic_check_white_36dp"/>
    </ViewSwitcher>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="15dp"
                  android:layout_marginStart="15dp"
                  android:orientation="vertical">

        <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"/>

        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"/>
    </LinearLayout>
</net.kourlas.voipms_sms.ui.ConversationsListViewItem>